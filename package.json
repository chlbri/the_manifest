{
  "name": "xstate",
  "version": "4.37.2",
  "description": "Finite State Machines and Statecharts for the Modern Web.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/xstate"
  },
  "files": [
    "dist",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "es/**/*.js",
    "es/**/*.d.ts"
  ],
  "keywords": [
    "statechart",
    "state machine",
    "finite state machine",
    "finite automata",
    "scxml",
    "state",
    "interpreter"
  ],
  "scripts": {
    "remove": "rm -rf lib es dist tsconfig.tsbuildinfo",
    "rollup": "rollup -c",
    "build": "rm -rf lib && pnpm run rollup",
    "test": "jest --passWithNoTests",
    "config": "pnpm install",
    "test:watch": "pnpm run test --watchAll",
    "clean": "pnpm run remove && pnpm run config",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "prepublishOnly": "pnpm run lint && pnpm run build",
    "p-q": "pretty-quick --staged --pattern \"**/*.*(ts|tsx)\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/statelyai/xstate.git"
  },
  "author": "David Khourshid <davidkpiano@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/statelyai/xstate/issues"
  },
  "homepage": "https://github.com/statelyai/xstate/tree/main/packages/core#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@changesets/cli": "^2.24.4",
    "@manypkg/cli": "^0.16.1",
    "@manypkg/get-packages": "^1.1.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@scion-scxml/test-framework": "^2.0.15",
    "@swc/core": "^1.3.56",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "@types/use-subscription": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "ajv": "^8.12.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "eslint": "^8.39.0",
    "fast-glob": "^3.2.11",
    "gh-pages": "^2.0.1",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "lerna-alias": "3.0.3-0",
    "pkg-up": "^3.1.0",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "rollup": "^2.69.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rxjs": "^7.1.0",
    "spawn-command": "0.0.2-1",
    "ts-jest": "^26.5.6",
    "tslib": "^2.3.1",
    "typescript": "^4.8.4",
    "xml-js": "^1.6.11"
  }
}
